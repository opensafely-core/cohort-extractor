/*                              spacer

	An empty view used for spacing in a grid.

	Note that changes to size should be made through .set.
	
*/
*! version 1.1.0  29may2007

version 8

class {
	xsize = 0
	ysize = 0

//	draw_view       = .yesno.new, style(yes)	// uncomment to select
} , inherit(view)



/* -------------------------------------------------------------------------*/
program new

	.set `0'
	.xstretch.set fixed
	.ystretch.set fixed
end


/* -------------------------------------------------------------------------*/
program set

	syntax [ , XSIZE(real -99) YSIZE(real -99) * ]

	if `xsize' != -99 {
		.xsize = `xsize'
	}

	if `ysize' != -99 {
		.ysize = `ysize'
	}

	.Super.set , `options'

end

/* -------------------------------------------------------------------------*/
program draw
	syntax [, XSize(real 0) YSize(real 0) ]

	if (`.ysize' > 0)  local ysize `.ysize'
	if (`.xsize' > 0)  local xsize `.xsize'

	.set_gdi_posn 0 0 `ysize' `xsize'

end

