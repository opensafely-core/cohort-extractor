/*                        starstyle

	Style class for star graphs.
*/
*! version 1.0.0  30jul2002

version 8

class {

    instance:
    	margin		= .margin.new
	label_gap	= .gsize.new
	label_position	= .above_below.new
	label_style	= .textstyle.new
	linestyle	= .linestyle.new
*	color_spokes	= .yesno.new
	base_zero	= .yesno.new
	connect		= .yesno.new
	fillspace	= .yesno.new

	keytext_style	= .textboxstyle.new
	key_symbol	= .markerstyle.new
	tockstyle	= .linestyle.new
	key_gap		= .gsize.new
	key_linespace	= .gsize.new
	column_gap	= .gsize.new

} , inherit(style)


/*-------------------------------------------------------------------------*/
program define new
						/* composite style defaults */
	syntax [ , Style(string) * ]
	if "`style'" == "" {
		.setstyle , style(scheme)
	}

	.Super.new `0'
end
