//				y2xkey_g
//
//  class that holds and draws a key view for an y2xview class or a seriesstyle.

*! version 1.2.0  01dec2006

version 10

class {
} , inherit(yxkey_g)


// ---------------------------------------------------------------------------
program draw_rspike
	.draw_spike `0'
end

program draw_rspike
	.draw_spike `0'
end

program draw_rbar
	.draw_bar `0'
end

program draw_rarea
	.draw_bar `0'
end

program draw_rline
	.draw_line `0' area
end

program draw_rscatter
	.draw_scatter `0'
end

program draw_rconnected
	.draw_connected `0' area
end


// ---------------------------------------------------------------------------
program draw_rcap
	args x0 y0 x1 y1

	local style = cond("`.view.isa'"=="" , "style", "view.style")
	local sz2 = `.`style'.marker.size.gmval' / 2

	local y0 = `y0' + `._sym_y `=`y1'-`y0''' 

	.draw_line `x0' `y0' `x1' `y0' area
	gdi line   `x0' `=`y0'-`sz2'' `x0' `=`y0'+`sz2''
	gdi line   `x1' `=`y0'-`sz2'' `x1' `=`y0'+`sz2''
end


// ---------------------------------------------------------------------------
program draw_rcapsym
	args x0 y0 x1 y1

	local y = `y0' + `._sym_y `=`y1'-`y0''' 

	.draw_line `x0' `y' `x1' `y' area
	.draw_symbol `x0'  `y'
	.draw_symbol `x1'  `y'
end
