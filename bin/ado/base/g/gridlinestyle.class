//				linestyle
*! version 1.0.0  24sep2002

version 8

class {

    instance:
	extend_low	= .yesno.new
	extend_high	= .yesno.new
	linestyle	= .linestyle.new

}, inherit(style)


// ---------------------------------------------------------------------------

program define new

	syntax [ , Style(string) * ]
	if "`style'" != "" {
		.setstyle, style(scheme)
	}
	
	.Super.new , `.set `0''
end



// ---------------------------------------------------------------------------
// 
//	Set this line style to the GDI

program define setgdi

	.linestyle.setgdi
end

program define setgdifull

	.linestyle.setgdifull
end

