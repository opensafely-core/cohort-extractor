
class {
	rgb = "255 255 255"
	xsize = 0
	ysize = 0
}, inherit(view)


program define new
	version 7
	
	syntax [, Color(numlist integer min=3 max=3 >=0 <=255) 		/*
		*/ XSize(string) YSize(string) * ]

	if "`color'" != "" {
		.rgb = "`color'"
	}

	if "`xsize'" != "" {
		.xsize = `xsize'
	}
	if "`ysize'" != "" {
		.ysize = `ysize'
	}
	.xstretch.set fixed
	.ystretch.set fixed
	
	.Super.new , `options'
end

program define draw
	version 7

	syntax [, XSize(real `.xsize') YSize(real `.ysize') ]
	.xsize = `xsize'
	.ysize = `ysize'

						/* set pen color */
	gdi linergb = `.rgb'
	gdi penchange
						/* draw box */
	gdi moveto 0 0
	gdi lineto `.xsize' 0
	gdi lineto `.xsize' `.ysize'
	gdi lineto 0 `.ysize'
	gdi lineto 0 0
						/* draw X */

	gdi lineto `.xsize' `.ysize'
	gdi moveto `.xsize' 0
	gdi lineto 0 `.ysize'

	gdi update

end

