*! version 1.0.0  30jul2002
version 8

class {
	rgb = "255 255 255"
}, inherit(view)


program define new
	
	syntax [, Color(numlist integer min=3 max=3 >=0 <=255) * ]

	if "`color'" != "" {
		.rgb = "`color'"
	}

	.xstretch.set fixed
	.ystretch.set fixed
	
	.Super.new , `options'
end

program define draw

	syntax [, XSize(real `.xsize') YSize(real `.ysize') ]
	.xsize = `xsize'
	.ysize = `ysize'

						/* set pen color */
	gdi linergb = `.rgb'
	gdi penchange
						/* draw box */
	gdi moveto 0 0
	gdi lineto `.xsize' 0
	gdi lineto `.xsize' `.ysize'
	gdi lineto 0 `.ysize'
	gdi lineto 0 0
						/* draw + */

	local x2 = `.xsize' / 2
	local y2 = `.ysize' / 2
	gdi moveto `x2' 0
	gdi lineto `x2' `.ysize'
	gdi moveto 0 `y2'
	gdi lineto `.xsize' `y2'

	gdi update

end

