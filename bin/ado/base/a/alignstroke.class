*! version 1.0.1  19aug2017
version 15

class {

    instance:
	alignstroke	= "inside"

} , inherit(style)

/* -------------------------------------------------------------------------*/
/*
	Usage:  .new [, style(name) alignstroke(alignstroke_name)]
*/
program new

	syntax [, Style(passthru) *]

	if `"`options'"' != "" {
		.set, `options'
	}

	if `"`style'"' != "" {
		.Super.new , `style'
	}
end

program set

	syntax [, ALIGNstroke(string)]

	if `"`alignstroke'"' == "" {			/* defaults */
		exit
	}

	local 0 `", `alignstroke'"'
	syntax [, INside CENter OUTside *]

	local alignstroke `inside' `center' `outside'
	opts_exclusive "`alignstroke'"
	if `"`alignstroke'"' != "" {
		.alignstroke = "`alignstroke'"
	}
	if `"`options'"' != "" {
		.setstyle, style(`options')
	}
end


program setgdi
	gdi alignstroke = `.alignstroke'
end


program setgdifull
	.setgdi
end

exit
