/*				axisstyle				 */
*! version 1.0.0  30jul2002

version 8

class {

    instance:
	numticks	= 5
	minor_ticks	= 0				/* per major tick */

	tickstyle	 = .tickstyle.new
	minortickstyle	 = .tickstyle.new

	outer_space	= .gsize.new
	title_gap	= .gsize.new

	alternate	= .yesno.new
	alternate_gap	= .gsize.new

	linestyle	 = .linestyle.new
	extend_low	 = .yesno.new /*, style(no) */
	extend_high	 = .yesno.new /*, style(no) */
	extend_full_low	 = .yesno.new /*, style(yes) */
	extend_full_high = .yesno.new /*, style(yes) */

	tickangle	 = .anglestyle.new , /* style(horizontal) */
	minor_tickangle  = .anglestyle.new , /* style(horizontal) */

}, inherit(style)


/*-------------------------------------------------------------------------*/
program define new
						/* composite style defaults */
	syntax [ , Style(string) * ]
	if "`style'" == "" {
		.setstyle , style(scheme)
	}

	.Super.new `0'
end


/*-------------------------------------------------------------------------*/
program define extend

	class exit = `.extend_low.istrue' | `.extend_high.istrue' | 	///
		     `.extend_full_low.istrue' | `.extend_full_high.istrue'
end
