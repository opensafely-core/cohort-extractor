*! version 1.0.1  19dec2005
version 8

class {

} , inherit(codestyle)


// ----------------------------------------------------------------------------
program compassdir
	local from left center right default
	local to    W     ""     E     ""

	class exit "`:word `:list posof "`.snm'" in from' of `to''"
end




// ----------------------------------------------------------------------------
// Returns the shift factor for the specified code name (uses the current
// setting if nothing is specified)

program shift_factor
	args name

	if "`name'" == "" {
		local name `.stylename'
	}

	if ("`name'" == "left")		class exit = 0
	if ("`name'" == "center")	class exit = 0.5
	if ("`name'" == "right")	class exit = 1

	class exit = 0
end

