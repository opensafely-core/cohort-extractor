//				legendstyle

*! version 1.0.1  20feb2011
version 8

class {
	rows		= .numstyle.new
	cols		= .numstyle.new
	col_first	= .yesno.new			// place in cols first
	text_first	= .yesno.new			// text before keys
	stacked		= .yesno.new			// text over/under keys
	row_gap		= .gsize.new
	col_gap		= .gsize.new
	key_gap		= .gsize.new
	key_position	= .compass2dir.new

	key_xsize	= .gsize.new
	key_ysize	= .gsize.new
	force_keysize	= .yesno.new

	labelstyle	= .textboxstyle.new	

	force_draw	= .yesno.new
	force_nodraw	= .yesno.new

	title_position	  = .clockdir.new
	title_ring	  = .gridringstyle.new
	subtitle_position = .clockdir.new
	subtitle_ring	  = .gridringstyle.new
	caption_position  = .clockdir.new
	caption_ring	  = .gridringstyle.new
	note_position	  = .clockdir.new
	note_ring	  = .gridringstyle.new

	myposition	  = .relative_posn.new

	boxmargin	= .margin.new
	box_alignment	= .compass2dir.new

	reversekey	= .yesno.new, style(no)

} , inherit(plotregionstyle)


program new
	syntax [, STYle(passthru) * ]

	if `"`style'"' == `""' {
		local style style(scheme)
	}

	.Super.new , `style' `options'
end
