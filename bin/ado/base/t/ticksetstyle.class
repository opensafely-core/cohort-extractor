//				ticksetstyle
*! version 1.1.0  02may2019

version 8

class {

    instance:
	numticks	= .numticks_g.new			// suggested

	tickstyle	 = .tickstyle.new
	tickangle	 = .anglestyle.new 		// , style(horizontal) 

	alternate	= .yesno.new
	alternate_gap	= .gsize.new

	gridstyle	= .gridstyle.new

	use_labels	= .yesno.new

}, inherit(style)


//---------------------------------------------------------------------------
program define new
						// composite style defaults
	syntax [ , Style(string) * ]
	if "`style'" == "" {
		.setstyle , style(scheme)
	}

	.Super.new `0'
end


//  --------------------------------------------------------------------------
//  Does style imply that ticks are drawn

program ticked

	class exit = (0`.tickstyle.show_ticks.istrue' &			///
		      "`.tickstyle.linestyle.snm'" != "none" & 		///
		      "`.tickstyle.linestyle.color.snm'" != "none")
end

program .inches
	class exit = 0`.tickstyle.inches'
end

exit
