//				bygraphstyle
//
//  Base style for by graphs

*! version 1.0.3  09oct2003
version 8

class {
	edgelabel	= .yesno.new

	alternate_xaxes	= .yesno.new
	alternate_yaxes	= .yesno.new
	skip_xalternate	= .yesno.new
	skip_yalternate	= .yesno.new
	outer_xtitles	= .yesno.new
	outer_ytitles	= .yesno.new
	outer_xaxes	= .yesno.new
	outer_yaxes	= .yesno.new
//	outer_xlabels	= .yesno.new
//	outer_ylabels	= .yesno.new
//	outer_xticks	= .yesno.new
//	outer_yticks	= .yesno.new

	indiv_xaxes	= .yesno.new
	indiv_yaxes	= .yesno.new
	indiv_xtitles	= .yesno.new
	indiv_ytitles	= .yesno.new
	indiv_xlabels	= .yesno.new
	indiv_ylabels	= .yesno.new
	indiv_xticks	= .yesno.new
	indiv_yticks	= .yesno.new
	indiv_xrescale	= .yesno.new		// yes --> no outer axes
	indiv_yrescale	= .yesno.new		// yes --> no outer axes

	indiv_margin	= .margin.new

	indiv_as_whole	= .yesno.new
	indiv_legends	= .yesno.new

	shrink_plotregion = .yesno.new
	shrink_indiv	  = .yesno.new

	special_options	= ""			// passed at front of options
	twoway_options	= ""			// passed at front of options

	plotregionstyle	= .plotregionstyle.new
} , inherit(graphstyle)


program new
	syntax [ , STYle(string) * ]

	if `"`style'"' == `""' {
		local style scheme default
	}
end

