*! version 1.1.0  29mar2007
version 8

class {

} , inherit(codestyle)



// ---------------------------------------------------------------------------

program _unabbrev

	if `"`0'"' == `"L"' {
		class exit "ascending"
	}

	local 0 , `0'

	syntax [ , Connected Direct Line Stairstep Upstairstep		///
		   STEPstair Ascending None I * ]

	if "`upstairstep'`stepstair'" != "" {
		class exit "stairstep_up"
	}
	if "`options'" == "J" {
		class exit "stairstep"
	}
	if "`connected'" != "" {
		class exit "direct"
	}
	if "`line'" != "" {
		class exit "direct"
	}
	if "`i'" != "" {
		class exit "none"
	}

	if `"`options'"' == `""' {
		class exit "`direct'`stairstep'`ascending'`none'"
	}

	class exit `"`options'"'		// allows new named styles
end


program onlines_code

	if ("`.stylename'" == "stairstep")     class exit = 2
	if ("`.stylename'" == "stairstep_up")  class exit = 3

	class exit = 1
end
